---
import BottomNav from "@components/BottomNav.astro";
import TopNav from '@components/TopNav.astro';
import '@styles/Global.css';
const {path1, path2, path3, path4, path5, path6, path7} = Astro.props;

---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Sarai Studies</title>
    </head>
	<body>
		<div class = "container">
            <div class = "screen"> 
               <TopNav/>
                <div class = "content">
                    <slot>
                </div>
            </div>
		</div>
        <BottomNav path1 = {path1} path2 = {path2} path3 = {path3} path4 = {path4} path5 = {path5} path6 = {path6} path7 = {path7}></BottomNav>

	</body>
</html>


<style>
    html{
        background: url('../../public/012024r2.png');
        background-size: cover;
    }
    body{
        height:100svh; 
        width:100%;
        overflow-y: hidden;
        display:flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
    }

	.container{
        height:95%;
        width:100%;
        padding:20px 20px 20px 20px;
   
	}
	.screen{
        background-color: white;
        display:grid;
        grid-template-columns: 100%;
        grid-template-rows: 80px 1fr;
        border: var(--border);
        width:100%;
        height:100%;
        overflow-y:hidden;
        min-height:300px;
        padding: 20px 0px 0px 0px;
        grid-gap:1em;

	}
    
    .content{
        display: flex;
        flex-direction: column;
        width: 100%;
        padding: 20px 20px;
        /* This is the part that makes it scrollable */
        overflow-y: scroll;
        scrollbar-width: thin; /* For Firefox */
        scrollbar-color: var(--scrollbar-thumb) var(--scrollbar-track); /* For Firefox */
        /* Webkit (Chrome, Safari) scrollbar styling */
        &::-webkit-scrollbar {
            width: 10px; /* Set the width of the scrollbar */
        }
        &::-webkit-scrollbar-thumb {
            background-color: var(--scrollbar-thumb); /* Set the color of the thumb */
            border-radius: 5px; /* Optional: Round the thumb's corners */
        }
        &::-webkit-scrollbar-track {
            background-color: var(--scrollbar-track); /* Set the color of the track */
            border-radius: 5px; /* Optional: Round the thumb's corners */

        }
        /* Optional: Handle scrollbar when it's in its inactive state */
        &:hover {
            &::-webkit-scrollbar-thumb {
                background-color: var(--scrollbar-thumb-hover); /* Change thumb color on hover */
            }
        }

    }
	
/*max-width these styles will apply up until the width is 768px
min-width these styles will stop applying once the width reaches 768px.
*/
@media only screen and (max-width:768px){
    .container{
        height:90%;
        position: relative;
        bottom:-5px;
    }

    .screen{
        height:100%;
    }


}




.content{
    display: flex;
    width: 100%;
    background-color: white;
    overflow-y: auto; /* Allow horizontal scrollbar if needed */
    overflow-x: hidden;
    scrollbar-width: thin; /* Firefox */
    -ms-overflow-style: none; /* Internet Explorer and Edge */

    /* Hide scrollbar on Webkit browsers (Chrome, Safari) */
    &::-webkit-scrollbar {
        width: 0.1rem; /* Adjust as needed */
    }

    &::-webkit-scrollbar-thumb {
        background-color: transparent;
    }

    /* Add any other styling properties you need */


}


@media only screen and (min-width:768px){
 
 .content{
   margin: 0 auto;
   width:50%;
 }


}
</style>