---
import Main from '@layouts/Main.astro';
import DirectoryComp from '../../../components/DirectoryComp.astro';

const path1 = '../financialAccounting/home.astro';
const path2 = '../managerialAccounting/home';
const path3 = '../calc1/home';
const path4 = '../calc2/home.astro'
const path5 = '../micro/home';
const path6 = '../macro/home';
const path7 = '../stats/home';

const blogs = await Astro.glob('./*.md');
import testt from '@classes/calc1/post-1.md';

---

<Main path1 = {path1} path2 = {path2} path3 = {path3} path4 = {path4} path5 = {path5} path6 = {path6} path7 = {path7}>
    <DirectoryComp className = "Calculus I for the Life and Social Sciences" classCode = '01:640:135' ></DirectoryComp>
    <ol>
        {blogs.map((post) => <li><a href = {post.url}>{post.frontmatter.title}</a></li>)}
    </ol>
    <test></test>
</Main>

<style>

    a{
        color:black;
        font-family: var(--primaryFont);
        font-size: large;
        text-decoration: underline;
        text-underline-offset: 2px;
    }
    ol{
        margin:20px;
    }
</style>